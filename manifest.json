{
  "manifest_version": 3,
  "name": "AFK Alert",
  "description": "Away From Keyboard Alert for Google meet",
  "version": "1.0",
  "action": {
    "default_popup": "src/index.html",
    "default_icon": "src/icons/coffee-cup.png"
  },
  "permissions": ["tabs", "storage", "alarms", "notifications"],
  "background": {
    "service_worker": "src/background.js"
  },
  "host_permissions": ["https://meet.google.com/*"]
}
